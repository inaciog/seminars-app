# Seminars App - Environment Template
# Copy to .env and fill in values

# Required
JWT_SECRET=your-jwt-secret-from-auth-service
API_SECRET=your-api-secret-for-dashboard

# Database: path or full URL
# Production (Fly.io): /data/seminars.db
# Local dev: ./data/seminars.db or sqlite:///./data/seminars.db
DATABASE_URL=/data/seminars.db

# Optional
UPLOADS_DIR=/data/uploads
MASTER_PASSWORD=
AUTH_SERVICE_URL=https://inacio-auth.fly.dev
APP_URL=https://seminars-app.fly.dev
PORT=8080
HOST=0.0.0.0
