# Seminars App - Environment Template
# Copy to .env and fill in values: cp .env.example .env

# Required (get JWT_SECRET from your auth service)
JWT_SECRET=your-jwt-secret-from-auth-service
API_SECRET=your-api-secret-for-dashboard

# Database: path or full URL
# Production (Fly.io): /data/seminars.db
# Local dev (default):
DATABASE_URL=./data/seminars.db

# Optional - paths
# Production: /data/uploads
# Local dev (default):
UPLOADS_DIR=./data/uploads

# Optional - auth callback URL for local testing
# Production: https://seminars-app.fly.dev
# Local dev - auth redirects here after login:
APP_URL=http://localhost:3000

# Optional - fallback mirror: commit and push to GitHub after each update
# FALLBACK_MIRROR_GIT_ENABLED=true

# Optional
MASTER_PASSWORD=
AUTH_SERVICE_URL=https://inacio-auth.fly.dev
PORT=8080
HOST=0.0.0.0
